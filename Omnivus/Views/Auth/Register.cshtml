@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    ViewData["ShowNavBar"] = true;
}
@section Scripts {
    <script src="~/js/validate.js"></script>
    <script src="~/js/validate_register.js"></script>
}

<section class="page-headline">
    <div class="content-no-headline"></div>
</section>

<section class="auth-content">
    <div class="container">
        <div class="d-flex justify-content-center">
            <div class="col-8">
                <form asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl" onsubmit="return validateFormOnSubmit();">
                    <div class="d-flex justify-content-between">
                        <div class="form-group col-6 register-firstname">
                            <div class="input-box">
                                <label asp-for="FirstName" class="control-label">First name</label>
                                <input id="firstname" asp-for="FirstName" class="form-control" />
                                <small>Error</small>
                            </div>
                        </div>
                        <div class="form-group col-6 register-lastname input-box">
                            <div class="input-box">
                                <label asp-for="LastName" class="control-label">Last name</label>
                                <input id="lastname" asp-for="LastName" class="form-control" />
                                <small>Error</small>
                            </div>
                        </div>
                    </div>
                    <div class="form-group input-box">
                        <div class="input-box">
                            <label asp-for="Street" class="control-label">Street</label>
                            <input id="street" asp-for="Street" class="form-control" />
                            <small>Error</small>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div class="form-group col-3 register-firstname input-box">
                            <div class="input-box">
                                <label asp-for="PostCode" class="control-label">Postcode</label>
                                <input id="postcode" asp-for="PostCode" class="form-control" />
                                <small>Error</small>
                            </div>
                        </div>
                        <div class="form-group col-9 register-lastname input-box">
                            <div class="input-box">
                                <label asp-for="City" class="control-label">City</label>
                                <input id="city" asp-for="City" class="form-control" />
                                <small>Error</small>
                            </div>
                        </div>
                    </div>
                    <div class="form-group input-box">
                        <div class="input-box">
                            <label asp-for="Email" class="control-label">Email</label>
                            <input id="email" asp-for="Email" class="form-control" />
                            <small>Error</small>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div class="form-group col-6 register-firstname input-box">
                            <div class="input-box">
                                <label asp-for="Password" class="control-label">Password</label>
                                <input id="password_1" asp-for="Password" class="form-control" type="password" />
                                <small>Error</small>
                            </div>
                        </div>
                        <div class="form-group col-6 register-lastname input-box">
                            <div class="input-box">
                                <label asp-for="ConfirmPassword" class="control-label">Confirm password</label>
                                <input id="password_2" asp-for="ConfirmPassword" class="form-control" type="password" />
                                <small>Error</small>
                            </div>
                        </div>
                    </div>
                    <div class="form-group d-grid mt-3">
                        <input type="submit" value="Register" class="btn btn-primary" />
                    </div>
                </form>
                @if (Model.Error is not null)
                {
                    <div class="register-error">
                        @Model.Error
                    </div>
                }
                <div class="form-group mt-4">
                    <a asp-controller="Auth" asp-action="Login">Already a member? Login here.</a>
                </div>
            </div>
        </div>
    </div>
</section>